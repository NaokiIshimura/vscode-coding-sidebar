{
  "name": "file-list-extension",
  "displayName": "File List Extension",
  "description": "指定したディレクトリ内のファイルを一覧表示するVSCode拡張機能",
  "version": "0.1.8",
  "publisher": "nacn",
  "icon": "images/nacn.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/NaokiIshimura/vscode-panel.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileList.selectFolder",
        "title": "フォルダを選択",
        "icon": "$(folder-opened)"
      },
      {
        "command": "fileList.refresh",
        "title": "更新",
        "icon": "$(refresh)"
      },
      {
        "command": "fileList.showInPanel",
        "title": "ファイル一覧に表示",
        "icon": "$(list-tree)"
      },
      {
        "command": "fileList.openFolder",
        "title": "フォルダを開く"
      },
      {
        "command": "fileList.goToParent",
        "title": "親フォルダへ移動",
        "icon": "$(arrow-up)"
      },
      {
        "command": "fileList.resetFolderSelection",
        "title": "フォルダ選択をリセット",
        "icon": "$(home)"
      },
      {
        "command": "fileList.setRelativePath",
        "title": "相対パスを設定",
        "icon": "$(edit)"
      },
      {
        "command": "fileList.openSettings",
        "title": "設定を開く",
        "icon": "$(settings-gear)"
      },
      {
        "command": "fileList.openUserSettings",
        "title": "ユーザ設定を開く",
        "icon": "$(settings)"
      },
      {
        "command": "fileList.openWorkspaceSettings",
        "title": "ワークスペース設定を開く",
        "icon": "$(settings-gear)"
      },
      {
        "command": "fileList.setupTemplate",
        "title": "テンプレートをカスタマイズ",
        "icon": "$(file-text)"
      },
      {
        "command": "fileList.openGitFile",
        "title": "Gitファイルを開く"
      },
      {
        "command": "fileList.showGitDiff",
        "title": "Git差分を表示"
      },
      {
        "command": "fileList.refreshGitChanges",
        "title": "Git変更を更新",
        "icon": "$(refresh)"
      },
      {
        "command": "fileList.createMarkdownFile",
        "title": "markdownファイルを作成",
        "icon": "$(new-file)"
      },
      {
        "command": "fileList.createFile",
        "title": "ファイルを作成",
        "icon": "$(new-file)"
      },
      {
        "command": "fileList.createFolder",
        "title": "フォルダを作成",
        "icon": "$(new-folder)"
      },
      {
        "command": "fileList.rename",
        "title": "名前の変更...",
        "icon": "$(edit)"
      },
      {
        "command": "fileList.delete",
        "title": "削除",
        "icon": "$(trash)"
      },
      {
        "command": "fileList.addFolder",
        "title": "フォルダを追加",
        "icon": "$(new-folder)"
      },
      {
        "command": "fileList.deleteFolder",
        "title": "フォルダを削除",
        "icon": "$(trash)"
      },
      {
        "command": "fileList.copyRelativePath",
        "title": "相対パスをコピー",
        "icon": "$(copy)"
      },
      {
        "command": "fileList.copy",
        "title": "コピー",
        "icon": "$(copy)"
      },
      {
        "command": "fileList.cut",
        "title": "切り取り",
        "icon": "$(scissors)"
      },
      {
        "command": "fileList.paste",
        "title": "貼り付け",
        "icon": "$(clippy)"
      },
      {
        "command": "fileList.searchInWorkspace",
        "title": "ワークスペース内を検索",
        "icon": "$(search)"
      }
    ],
    "views": {
      "fileListView": [
        {
          "id": "workspaceSettings",
          "name": "設定",
          "visibility": "collapsed"
        },
        {
          "id": "workspaceExplorer",
          "name": "エクスプローラー"
        },
        {
          "id": "fileListExplorer",
          "name": "フォルダツリー"
        },
        {
          "id": "fileListDetails",
          "name": "ファイル一覧"
        },
        {
          "id": "gitChanges",
          "name": "Git変更ファイル"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileListView",
          "title": "File List",
          "icon": "$(note)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fileList.addFolder",
          "when": "view == fileListExplorer",
          "group": "navigation@1"
        },
        {
          "command": "fileList.refresh",
          "when": "view == fileListExplorer",
          "group": "navigation@2"
        },
        {
          "command": "fileList.goToParent",
          "when": "view == fileListExplorer",
          "group": "navigation@3"
        },
        {
          "command": "fileList.resetFolderSelection",
          "when": "view == fileListExplorer",
          "group": "navigation@4"
        },
        {
          "command": "fileList.selectFolder",
          "when": "view == fileListExplorer",
          "group": "navigation@5"
        },
        {
          "command": "fileList.createMarkdownFile",
          "when": "view == fileListDetails",
          "group": "navigation@1"
        },
        {
          "command": "fileList.refresh",
          "when": "view == fileListDetails",
          "group": "navigation@3"
        },
        {
          "command": "fileList.goToParent",
          "when": "view == fileListDetails",
          "group": "navigation@4"
        },
        {
          "command": "fileList.refreshGitChanges",
          "when": "view == gitChanges",
          "group": "navigation"
        },
        {
          "command": "fileList.searchInWorkspace",
          "when": "view == workspaceExplorer",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "fileList.showInPanel",
          "when": "view == fileListExplorer && viewItem == directory",
          "group": "inline"
        },
        {
          "command": "fileList.addFolder",
          "when": "view == fileListExplorer && viewItem == directory",
          "group": "2_workspace@2"
        },
        {
          "command": "fileList.deleteFolder",
          "when": "view == fileListExplorer && viewItem == directory",
          "group": "2_workspace@3"
        },
        {
          "command": "fileList.copyRelativePath",
          "when": "view == fileListExplorer",
          "group": "1_copy"
        },
        {
          "command": "fileList.showInPanel",
          "when": "view == fileListDetails && viewItem == directory",
          "group": "inline"
        },
        {
          "command": "fileList.createMarkdownFile",
          "when": "view == fileListDetails && viewItem == directory",
          "group": "2_workspace"
        },
        {
          "command": "fileList.rename",
          "when": "view == fileListDetails",
          "group": "3_edit@1"
        },
        {
          "command": "fileList.delete",
          "when": "view == fileListDetails",
          "group": "3_edit@2"
        },
        {
          "command": "fileList.copyRelativePath",
          "when": "view == fileListDetails",
          "group": "1_copy"
        },
        {
          "command": "fileList.copy",
          "when": "view == workspaceExplorer",
          "group": "1_clipboard@1"
        },
        {
          "command": "fileList.cut",
          "when": "view == workspaceExplorer",
          "group": "1_clipboard@2"
        },
        {
          "command": "fileList.paste",
          "when": "view == workspaceExplorer && viewItem == directory",
          "group": "1_clipboard@3"
        },
        {
          "command": "fileList.copyRelativePath",
          "when": "view == workspaceExplorer",
          "group": "1_copy"
        },
        {
          "command": "fileList.rename",
          "when": "view == workspaceExplorer",
          "group": "2_edit@1"
        },
        {
          "command": "fileList.delete",
          "when": "view == workspaceExplorer",
          "group": "2_edit@2"
        },
        {
          "command": "fileList.createMarkdownFile",
          "when": "view == workspaceExplorer && viewItem == directory",
          "group": "3_new@1"
        },
        {
          "command": "fileList.createFile",
          "when": "view == workspaceExplorer && viewItem == directory",
          "group": "3_new@2"
        },
        {
          "command": "fileList.createFolder",
          "when": "view == workspaceExplorer && viewItem == directory",
          "group": "3_new@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fileList.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "focusedView == workspaceExplorer"
      },
      {
        "command": "fileList.cut",
        "key": "ctrl+x",
        "mac": "cmd+x",
        "when": "focusedView == workspaceExplorer"
      },
      {
        "command": "fileList.paste",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "focusedView == workspaceExplorer"
      },
      {
        "command": "fileList.delete",
        "key": "delete",
        "when": "focusedView == workspaceExplorer"
      },
      {
        "command": "fileList.rename",
        "key": "f2",
        "when": "focusedView == workspaceExplorer"
      }
    ],
    "configuration": {
      "title": "File List Extension",
      "properties": {
        "fileListExtension.defaultRelativePath": {
          "type": "string",
          "default": "",
          "description": "フォルダツリーのデフォルト相対パス"
        },
        "fileListExtension.sortBy": {
          "type": "string",
          "enum": [
            "name",
            "type",
            "size",
            "modified"
          ],
          "default": "name",
          "description": "ファイルのソート基準",
          "enumDescriptions": [
            "名前でソート",
            "種類でソート",
            "サイズでソート",
            "更新日時でソート"
          ]
        },
        "fileListExtension.sortOrder": {
          "type": "string",
          "enum": [
            "ascending",
            "descending"
          ],
          "default": "ascending",
          "description": "ソート順序",
          "enumDescriptions": [
            "昇順",
            "降順"
          ]
        },
        "fileListExtension.showHidden": {
          "type": "boolean",
          "default": false,
          "description": "隠しファイル・フォルダを表示する"
        },
        "fileListExtension.viewMode": {
          "type": "string",
          "enum": [
            "tree",
            "list"
          ],
          "default": "tree",
          "description": "表示モード",
          "enumDescriptions": [
            "ツリー表示",
            "リスト表示"
          ]
        },
        "fileListExtension.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "ファイルシステム変更時に自動更新する"
        },
        "fileListExtension.showFileIcons": {
          "type": "boolean",
          "default": true,
          "description": "ファイルアイコンを表示する"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package --out releases/ --allow-missing-repository --no-dependencies",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "build:release": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^3.6.2"
  }
}
